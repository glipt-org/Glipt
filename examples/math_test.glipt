# Math module tests

# Rounding
assert(math.floor(3.7) == 3)
assert(math.floor(-2.3) == -3)
assert(math.ceil(3.2) == 4)
assert(math.ceil(-2.7) == -2)
assert(math.round(3.5) == 4)
assert(math.round(3.4) == 3)
print("rounding: ok")

# Abs / Sqrt / Pow
assert(math.abs(-5) == 5)
assert(math.abs(5) == 5)
assert(math.sqrt(9) == 3)
assert(math.sqrt(16) == 4)
assert(math.pow(2, 10) == 1024)
assert(math.pow(3, 3) == 27)
print("abs/sqrt/pow: ok")

# Log / Exp
assert(math.exp(0) == 1)
assert(math.log(1) == 0)
assert(math.log10(100) == 2)
print("log/exp: ok")

# Min / Max
assert(math.min(3, 7) == 3)
assert(math.min(-1, 1) == -1)
assert(math.max(3, 7) == 7)
assert(math.max(-1, 1) == 1)
print("min/max: ok")

# Trig
assert(math.sin(0) == 0)
assert(math.cos(0) == 1)
assert(math.tan(0) == 0)
print("trig: ok")

# Constants
assert(math.PI > 3.14)
assert(math.PI < 3.15)
assert(math.E > 2.71)
assert(math.E < 2.72)
print("constants: ok")

# Random
r = math.rand()
assert(r >= 0)
assert(r <= 1)
ri = math.rand_int(1, 10)
assert(ri >= 1)
assert(ri <= 10)
print("random: ok")

print("")
print("ALL MATH TESTS PASSED")
